@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3 class="text-center">@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-6 mx-auto">
        <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
        <p>
            <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </p>
        <form class="text-center" id="download-data" asp-page="DownloadPersonalData" method="post">
            <button class="btn btn-primary w-50" type="submit">Download</button>
        </form>
        <div class="text-center">
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger w-50">Delete</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
