<div class="card cardbig my-2 mx-auto">
    @{
        Model.ImageSrc = await profilePictureManager.SetProfilePicture(Model.UserThread.UserId);
    }
    <img src="@Model.ImageSrc" class="card-img-top">

    <div class="card-body">
        <div class="text-section">
            <h5 class="fw-bold"><span class="mygradient2">@Model.UserThread.Header</span></h5>
            <p class="card-text py-5">@Model.UserThread.Content</p>
            <p class="card-text position-absolute bottom-0 start-20 py-1">Author: @Model.AuthorUser.NickName</p> @*TODO: Kolla att det blir rätt author*@
        </div>
        <div class="cta-section">
            <div>@Model.UserThread.Date</div>
            <a href="javascript:history.back()" type="button" class="btn bg-light">
                Go back
                </a>

            <span>
                @if (signInManager.IsSignedIn(User))
                {
                    <button type="button" class="btn bg-light" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        Add comment
                    </button>
                }
                <a class="btn btn-light bg-light" href="" style="z-index:2">Report</a>
            </span>

        </div>
    </div>
</div>

@if (signInManager.IsSignedIn(User))
{

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Add comment</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form method="post">
                        <div class="form-group">
                            <label asp-for="Comment.Content" class="control-label">Enter text here...</label>
                            <textarea asp-for="Comment.Content" class="form-control form-control-lg form-control-sm" rows="3"></textarea>

                        </div>

                        <button type="submit" class="btn btn-primary btn-block">Submit comment</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@foreach (var comment in Model.Comments.OrderByDescending(x => x.Date))
{
    @foreach (var thisUser in userManager.Users.ToList())
    {
        if (thisUser.Id == comment.UserId)
        {
            <div class="card my-2 mx-auto">
                @{
                    Model.ImageSrc = await profilePictureManager.SetProfilePicture(thisUser.Id);
                }
                <img src="@Model.ImageSrc" class="card-img-top">

                <div class="card-body">
                    <div class="text-section">
                        <h5 class="card-title fw-bold"><span class="mygradient">@thisUser.NickName</span> says:</h5> @*TODO: Färgval i span (comments)*@
                        <p class="card-text py-5">@comment.Content</p>
                    </div>
                    <div class="cta-section">
                        <div>@comment.Date</div>
                        <a class="btn btn-light bg-light" href="" style="z-index:2">Report</a>
                    </div>
                </div>
            </div>
        }
    }

}



