@*MODAL TOGGLE BUTTON*@
<div class="card cardbig my-2 mx-auto">
    <div class="card-body">
        <div class="my-2 fw-bold">
            Welcome to your inbox
        </div>
        <button type="button" class="btn bg-light" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Create new Message
        </button>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Create Message</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="form-group">

                        <div>
                            <select name="userId" class="form-select form-select-lg mb-3">
                                Open this select menu
                                @foreach (var user in Model.AllUsers)
                                {
                                    var userId = user.Id;
                                    <option value="@userId">@user.UserName</option>
                                }
                            </select>
                        </div>


                        <label asp-for="Message.Header" class="control-label">Please enter Header</label>
                        <input asp-for="Message.Header" class="form-control" />
                        <span asp-validation-for="Message.Header" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Message.Content" class="control-label">Enter text here...</label>
                        <textarea asp-for="Message.Content" class="form-control form-control-lg form-control-sm" rows="3"></textarea>
                        <br />
                    </div>

                    <button type="submit" class="btn btn-primary btn-block">Send Message</button>
                </form>
            </div>
        </div>
    </div>
</div>

<section class="bg-light text-dark p-2 p-lg-0 pt-lg-1 text-center text-sm-start">
    <div class="container">
        <div class="d-sm-flex align-items-center justify-content-between d-lg-flex d-md-flex">
            <div class="card cardbig my-2 mx-auto">
                <div class="card-body">
                    @foreach (var message in Model.Inbox)
                    {
                        <div class="card my-2 mx-auto">
                            <div class="card-body">
                                <div class="my-2 fw-bold">

                                    <h5>@message.Header</h5>
                                    <h6>@message.Content</h6>
                                    <p>@message.Date</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="card cardbig my-2 mx-auto">
                <div class="card-body">
                    @foreach (var message in Model.Outbox)
                    {
                        <div class="card my-2 mx-auto">
                            <div class="card-body">
