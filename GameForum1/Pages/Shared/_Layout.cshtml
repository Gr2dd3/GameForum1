<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - GameForum1</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/GameForum1.styles.css" asp-append-version="true" />
</head>
<body>
	<div class="container-fluid">
		<header class="bg-dark w-100">
			<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3 g-0">
				<div class="container">
					<div class="navbar-brand start-0 mx-auto">
						<button class="btn btn-close-white">

						<a class="navbar-brand text-success bg-opacity-50" asp-area="" asp-page="/Index">Gamers Paradise</a>
						</button>
					</div>
					<button class="navbar-toggler mx-auto" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
							aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="navbar-collapse collapse d-sm-inline-flex align-content-end">
						<ul class="navbar-nav flex-grow-1">
							<li class="nav-item">
								<a class="nav-link text-light" asp-area="" asp-page="/Index">Home</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-light" asp-area="" asp-page="/Maincategories">Browse forum</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-light" asp-area="" asp-page="/Admin/Index">Admin</a>
							</li>
						</ul>
						<partial class="text-success" name="_LoginPartial" />
					</div>
				</div>
			</nav>
		</header>
	</div>
	<div class="container">
		<main role="main" class="pb-0">
			@RenderBody()
		</main>
	</div>
	<!-- Footer-->
	<footer class="p-5 bg-dark text-white text-center position-relative">
		<div class="container-fluid">
			<p class="lead">Copyright &copy; Gamers Paradise</p>
			<a href="#" class="position-absolute bottom-0 end-0 p-5">
				<i class="bi bi-arrow-up-circle h1"></i>
			</a>
		</div>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
