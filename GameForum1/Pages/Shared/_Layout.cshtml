<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GameForum1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GameForum1.styles.css" asp-append-version="true" />
</head>
<body>
    <nav class="shadow bg-body">
        <div class="container">
            <header class="d-flex justify-content-center py-3">
                <ul class="nav nav-pills fw-bold">
                    <li class="nav-item position-absolute start-0 mx-3"><a href="/" class="nav-link active" aria-current="page">Gamers Paradise</a></li>
                    <li class="nav-item"><a asp-page="/Maincategories" class="nav-link" asp-area="">Browse forum</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/Admin/Index">Admin</a></li>
                </ul>
                <partial class="text-success" name="_LoginPartial" />
               
            </header>
            
        </div>
    </nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>