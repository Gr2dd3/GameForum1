@page
@model GameForum1.Pages.UserthreadsModel
@inject SignInManager<GameForum1User> signInManager
@{
       
}





@if (signInManager.IsSignedIn(User))
{
    <h4 class="display-4">Create new thread </h4>
    <form method="post">
        <div class="form-group">
            <a asp-route-subCategoryId="@Model.SubCategory.Id" type="hidden"></a>
            <label asp-for="UserThread.Header" class="control-label">Please enter Header</label>
            <input asp-for="UserThread.Header" class="form-control" />
            <span asp-validation-for="UserThread.Header" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="UserThread.Content" class="control-label">Enter text here...</label>
            <textarea asp-for="UserThread.Content" class="form-control form-control-lg form-control-sm" rows="3"></textarea>
            <br />
        </div>


        <input type="submit" value="Submit thread">
    </form>
    <hr />
}

<div>
    <h3 class="display-3">@Model.SubCategory.Name user threads</h3>
</div>

@foreach (var userThread in Model.UserThreads)
{
    <div class="lead">
        <a asp-page="/Comments" asp-route-userThreadId="@userThread.Id" class="nav-link text-dark">@userThread.Header | Author: @Model.MyUser.NickName | Created: @userThread.Date | Score: placeholder | <button class="btn">Report this thread</button></a>
    </div>

}
